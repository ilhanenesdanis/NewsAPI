@model List<ListTagDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layouts.cshtml";
}
<div class="col-md-12">
    <div class="row">
        <div class="col-md-12 mt-3">
            <div class="row">
                <div class="col-md-2">
                    <label for="exampleInputUsername2" class="col-form-label">Tag Adı</label>
                </div>
                <div class="col-md-7">
                    <input type="text" class="form-control" id="Name" placeholder="Tag Adı">
                    <input type="hidden" id="TagId" />
                </div>
                <div class="col-md-2 pt-1">
                    <button type="button" id="AddBtn" class="btn btn-info btn-fw">Ekle</button>
                    <button type="button" style="display:none;" id="EditCategory" class="btn btn-warning btn-fw">Düzenle</button>
                </div>
            </div>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Tag Adı</th>
                                    <th>Kullanılan Haberler</th>
                                    <th>Düzenle</th>
                                    <th>Aktif/Pasif</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td> @item.Name</td>
                                        <td> <button type="button" class="btn btn-info btn-fw">Listele</button></td>
                                        <td><button type="button" class="btn btn-warning  btn-fw">Düzenle</button></td>
                                        <td><button type="button" class="btn btn-success  btn-fw">Aktif</button></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
